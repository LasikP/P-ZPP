@model UserLogin

@{
    Layout = (string)ViewData["Layout"];
}
<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

    <title>Bootstrap 5.0 Pricing Table</title>

    <style>


    </style>

</head>
<body>


    <div class="container-fluid">
        <div class="container p-5">
            <div class="row">
                <div class="col-lg-4 col-md-12 mb-4">
                    <div class="card card1 h-100">
                        <div class="card-body">

                            <h5 class="card-title">Tygodniowy</h5>
                            <small class='text-muted'>Okres od 3 do 7 dni</small>
                            <br><br>
                            <span class="h2">400zł</span>
                            <br><br>
                            <div class="d-grid my-3">
                                <button class="btn btn-outline-dark btn-block">Wybierz</button>
                            </div>
                            <ul>
                                <li>Dostępny przez cały tydzień! Idealny na urlop!</li>
                                <li>Wypożyczasz narty kiedy tylko chcesz</li>

                            </ul>
                        </div>


                    </div>
                </div>
                <div class="col-lg-4 col-md-12 mb-4">
                    <div class="card card2 h-100">
                        <div class="card-body">

                            <h5 class="card-title">Weekendowy</h5>
                            <small class='text-muted'>Okres 2 dni</small>
                            <br><br>
                            <span class="h2">250zł</span>
                            <br><br>
                            <div class="d-grid my-3">
                                <button class="btn btn-outline-dark btn-block">Wybierz</button>
                            </div>
                            <ul>
                                <li>Ważny tylko przez wybrany weekend</li>
                                <li>Wypożyczasz narty kiedy tylko chcesz</li>

                            </ul>
                        </div>


                    </div>
                </div>
                <div class="col-lg-4 col-md-12 mb-4">
                    <div class="card card3 h-100">
                        <div class="card-body">

                            <h5 class="card-title">Sezonowy</h5>
                            <small class='text-muted'>Cały sezon</small>
                            <br><br>
                            <span class="h2">1700zł</span>
                            <br><br>
                            <div class="d-grid my-3">
                                <button class="btn btn-outline-dark btn-block">Wybierz</button>
                            </div>
                            <ul>
                                <li>Dostępny całą zimę</li>
                                <li>Wypożyczasz narty kiedy tylko chcesz</li>
                                <li>Obiad w restuaracji GRATIS</li>
                                <li>Wstęp do Termy GRATIS</li>

                            </ul>
                        </div>


                    </div>
                </div>
            </div>
        </div>
</body>


<!-- Option 1: Bootstrap Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>


</html>