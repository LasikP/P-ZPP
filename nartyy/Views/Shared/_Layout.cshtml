<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Snow Landing - Wypożyczalnia Nart</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

    <meta property="og:title" content="">
    <meta property="og:type" content="website">
    <meta property="og:url" content="">
    <meta property="og:site_name" content="">
    <meta property="og:description" content="">

    <!-- Styles -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway:400,100,200,300,500,600,700,800,900|Montserrat:400,700">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/main.css">

</head>
<header>
    <div class="container">
        <div class="row">
            <div class="col-xs-6">
                <a href="@Url.Action("Index", "Home")">
                    <img src="img/logo.svg" alt="Logo">
                </a>
            </div>
            <div class="col-xs-6 signin text-right navbar-nav">
                <div class="col-xs-3">
                    <a href="@Url.Action("Company")">
                        <button class="change-color-button">
                            <i class="fa-solid fa-users-between-lines"></i> O nas
                        </button>
                    </a>
                </div>
                <div class="col-xs-3">
                    <a href="@Url.Action("Cash")">
                        <button class="change-color-button">
                            <i class="fa-solid fa-money-bill"></i> Cennik
                        </button>
                    </a>
                </div>
                <div class="col-xs-3">
                    <a href="@Url.Action("Contact")">
                        <button class="change-color-button">
                            <i class="fa-solid fa-phone"></i> Kontakt
                        </button>
                    </a>
                </div>
                <div class="col-xs-3">
                    <a href="@Url.Action("LogOn")">
                        <button class="change-color-button">
                            <i class="fa-regular fa-user"></i> Zaloguj się
                        </button>
                    </a>
                </div>
            </div>
        </div>
    </div>
</header>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="logo" href="@Url.Action("Index", "Home")"><img src="img/logo.svg" alt="Logo"></a>
            </div>
        </div>
    </div>



    <div class="row header-info">
        <div class="col-sm-10 col-sm-offset-1 text-center">
            <h1 class="wow fadeIn" style="background-color: #8334eb;">WYPOŻYCZALNIA NART</h1>
            <br />
            <p class="lead wow fadeIn" data-wow-delay="0.5s" style="background-color: #8334eb;">MAMY CAŁY SPRZĘT</p>
            <br />
        </div>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-sm-8 margin-20">
                    <ul class="list-inline social">
                        <li style="color: grey;">Kontakt z nami</li>
                        <li><a href="www.twitter.com"><i class="fa-brands fa-square-twitter" style="color: grey;"></i></a></li>
                        <li><a href="www.facebook.com"><i class="fa-brands fa-facebook" style="color: grey;"></i></a></li>
                        <li><a href="www.instagram.com"><i class="fa-brands fa-square-instagram" style="color: grey;"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>

    </footer>

    <!-- Javascript -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="js/jquery-1.11.0.min.js"><\/script>')</script>
    <script src="js/wow.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/main.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var header = document.querySelector("header");

            // Ukrywanie headera przed opuszczeniem strony
            window.addEventListener("beforeunload", function () {
                if (header) {
                    header.style.display = "none";
                }
            });
        });
    </script>

    </script>


</body>
</html>

